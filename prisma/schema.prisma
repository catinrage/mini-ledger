generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id String @id @default(cuid())

  party       String
  type        TransactionType
  amount      Float
  description String?

  // Due date fields - the only date for a transaction
  dueDate                      DateTime?     @map("date")
  relativeDueDateTransactionId String?
  relativeDueDateOffsetDays    Int?
  relativeDueDateTransaction   Transaction?  @relation("RelativeDueDate", fields: [relativeDueDateTransactionId], references: [id], onDelete: SetNull)
  dependentTransactions        Transaction[] @relation("RelativeDueDate")

  deleted          Boolean @default(false)
  applied          Boolean @default(false)
  includeInBalance Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Settings {
  id String @id @default(cuid())

  baselineBalance Float @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum TransactionType {
  DEPOSIT
  WITHDRAW
}
